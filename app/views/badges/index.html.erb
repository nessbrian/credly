<p id="notice"><%= notice %></p>

<h1>Issued Badges</h1>

<table>
  <thead>
    <tr>
      <th>Badge Id</th>
      <th>Badge Template Id</th>
      <th>Issued To</th>
      <th>Recipient Email</th>
      <th>Issue Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge['id'] %></td>
        <td><%= badge['badge_template']['id'] %></td>
        <td><%= badge['issued_to'] %></td>
        <td><%= badge['recipient_email'] %></td>
        <td><%= badge['issued_at_date'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Issue New Badge', new_badge_path %>
